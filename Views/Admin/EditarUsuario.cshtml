@using PortalPowerBI.Services
@model Usuario

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-9">
            <div class="card shadow border-0 card-light-table">
                <div class="card-header bg-primary text-white py-3">
                    <h4 class="mb-0"><i class="bi bi-person-gear"></i> Editar Usuário: @Model.Login</h4>
                </div>
                <div class="card-body p-4">
                    <form action="/Admin/SalvarEdicao" method="post" id="formEdicao">
                        <input type="hidden" name="loginOriginal" value="@Model.Login" />

                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Nome</label>
                                <input type="text" name="nome" class="form-control" value="@Model.Nome" required>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">E-mail</label>
                                <input type="email" name="email" class="form-control" value="@Model.Email">
                            </div>
                        </div>
                        
                        <div class="row g-3 mb-4">
                            <div class="col-md-4">
                                <label class="form-label fw-bold">Login (Apelido/Chave de Acesso)</label>
                                <input type="text" name="login" class="form-control" value="@Model.Login" required>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label fw-bold">Senha</label>
                                <input type="text" name="senha" class="form-control" value="@Model.Senha" required>
                            </div>
                            <div class="col-md-4 d-flex align-items-end justify-content-end">
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="checkbox" name="resetarSenha" value="true" id="checkReset">
                                    <label class="form-check-label" for="checkReset">Forçar troca de senha</label>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row g-3 mb-4">
                            <div class="col-12 text-end">
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="checkbox" name="isAdmin" value="true" id="checkAdmin" @(Model.IsAdmin ? "checked" : "")>
                                    <label class="form-check-label" for="checkAdmin">É Admin?</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="checkbox" name="ativo" value="true" id="checkAtivo" @(Model.Ativo ? "checked" : "")>
                                    <label class="form-check-label" for="checkAtivo">Ativo?</label>
                                </div>
                            </div>
                        </div>
                        
                        <hr class="my-4">
                        <h5 class="mb-3 text-secondary">Acessos</h5>
                        
                        <div class="table-responsive border rounded">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th style="width: 50px;" class="text-center">#</th>
                                        <th>Conteúdo BI</th>
                                        <th style="width: 200px;">Perfil RLS (Opcional)</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach(var conteudo in MockDb.TodosApps)
                                    {
                                        var acessoExistente = Model.Acessos.FirstOrDefault(a => a.ReportId == conteudo.Id);
                                        bool temAcesso = acessoExistente != null;
                                        string roleAtual = acessoExistente?.Role ?? "";
                                        
                                        <tr class="@(conteudo.RequerRls ? "table-warning" : "")">
                                            <td class="text-center">
                                                <input type="checkbox" 
                                                       name="relatoriosSelecionados" 
                                                       value="@conteudo.Id" 
                                                       class="form-check-input check-relatorio"
                                                       data-requer-rls="@conteudo.RequerRls.ToString().ToLower()"
                                                       @(temAcesso ? "checked" : "")>
                                            </td>
                                            <td>
                                                <strong class="d-block">@conteudo.Nome</strong>
                                                @if(conteudo.RequerRls) {
                                                    <span class="badge bg-warning text-dark ms-2" title="Exige RLS">RLS Obrigatório</span>
                                                }
                                                <div class="small text-muted">(@(conteudo.ContentType == PortalPowerBI.Services.ContentTypes.App ? "App" : "Report"))</div>
                                            </td>
                                            <td>
                                                <input type="text" 
                                                       name="role_@conteudo.Id" 
                                                       value="@roleAtual" 
                                                       class="form-control form-control-sm input-role" 
                                                       placeholder="@(conteudo.RequerRls ? "Obrigatório" : "Opcional")">
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a href="/Admin/Usuarios" class="btn btn-outline-secondary">Cancelar</a>
                            <button type="submit" class="btn btn-primary">Salvar Alterações</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.getElementById('formEdicao').addEventListener('submit', function(e) {
        var checkboxes = document.querySelectorAll('.check-relatorio');
        var temErro = false;

        checkboxes.forEach(function(check) {
            if (check.checked) {
                if (check.getAttribute('data-requer-rls') === 'true') {
                    var row = check.closest('tr');
                    var inputRole = row.querySelector('.input-role');
                    
                    if (!inputRole.value.trim()) {
                        temErro = true;
                        inputRole.classList.add('is-invalid');
                        inputRole.addEventListener('input', function() { this.classList.remove('is-invalid'); });
                    }
                }
            }
        });

        if (temErro) {
            e.preventDefault();
            alert("ERRO: Existem conteúdos marcados como 'RLS Obrigatório' sem o Perfil preenchido.");
        }
    });
</script>