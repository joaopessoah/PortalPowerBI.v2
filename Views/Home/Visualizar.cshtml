@using PortalPowerBI.Services
@model EmbedConfig

@{
    Layout = "_Layout";
    ViewData["Title"] = @Model.ReportName;
}

<div class="d-flex justify-content-between align-items-center mb-3 pt-2">
    <h4 class="text-white mb-0 fw-bold text-truncate"><i class="bi bi-bar-chart-fill me-2 text-primary"></i>@Model.ReportName</h4>
    <a href="/Home/Index" class="btn btn-outline-secondary btn-sm px-3 text-nowrap">
        <i class="bi bi-arrow-left me-1"></i> Voltar
    </a>
</div>

<div id="embed-container" class="w-100 rounded-3 overflow-hidden shadow-lg position-relative" 
     style="background-color: #ffffff; border: 1px solid var(--glass-border); height: 85vh;">
    
    <div class="d-flex justify-content-center align-items-center h-100 w-100 position-absolute" id="loading-state">
        <div class="text-center">
            <div class="spinner-border text-primary mb-3" role="status"></div>
            <h6 class="text-secondary fw-light">Carregando painel...</h6>
        </div>
    </div>
</div>

<script src="/js/powerbi.min.js"></script>
<script>
    document.addEventListener("DOMContentLoaded", function() {
        var embedContainer = document.getElementById('embed-container');
        var loadingState = document.getElementById('loading-state');
        
        if (typeof powerbi === 'undefined') {
            embedContainer.innerHTML = "<div class='d-flex h-100 align-items-center justify-content-center text-danger'>Erro: Biblioteca JS não carregou.</div>";
            return;
        }

        var config = {
            type: 'report',
            tokenType: 1, 
            accessToken: '@Model.EmbedToken',
            embedUrl: '@Model.EmbedUrl',
            id: '@Model.ReportId',
            permissions: 7,
            settings: {
                filterPaneEnabled: true,
                navContentPaneEnabled: true,
                background: 0 // 0 = Padrão (Opaco/Branco), 1 = Transparente
            }
        };

        try {
            var report = powerbi.embed(embedContainer, config);
            report.on("loaded", function () { loadingState.style.display = 'none'; });
            report.on("error", function (e) { console.error(e); });
        } catch (e) { console.error(e); }
    });
</script>