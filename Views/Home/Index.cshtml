@{
    ViewData["Title"] = "Meus Dashboards";
}

<style>
    /* Estilo Específico para os Cards desta página */
    .dashboard-card {
        background: rgba(30, 41, 59, 0.7); /* Fundo escuro semi-transparente */
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 16px;
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        transition: transform 0.3s ease, box-shadow 0.3s ease, border-color 0.3s ease;
        overflow: hidden;
        height: 100%;
        text-decoration: none;
        display: block;
    }

    .dashboard-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 30px -10px rgba(0, 0, 0, 0.5);
        border-color: #0ea5e9; /* Cor de destaque (Azul Benner) */
    }

    .card-icon-wrapper {
        width: 50px;
        height: 50px;
        border-radius: 12px;
        background: rgba(14, 165, 233, 0.15); /* Fundo sutil do ícone */
        color: #0ea5e9;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        margin-bottom: 1rem;
    }

    .card-title {
        color: #f1f5f9;
        font-weight: 600;
        font-size: 1.1rem;
        margin-bottom: 0.5rem;
    }

    .card-desc {
        color: #94a3b8; /* Text-secondary */
        font-size: 0.9rem;
        line-height: 1.5;
    }
</style>

<div class="py-4">
    <!-- Cabeçalho da Página -->
    <div class="row mb-5 align-items-end">
        <div class="col">
            <h6 class="text-uppercase text-secondary fw-bold mb-1" style="font-size: 0.75rem; letter-spacing: 1px;">Bem-vindo</h6>
            <h2 class="text-white fw-bold mb-0">Meus Dashboards</h2>
        </div>
    </div>

    <!-- Grid de Relatórios -->
    <div class="row g-4">
        @if (PortalPowerBI.Services.MockDb.Relatorios != null && PortalPowerBI.Services.MockDb.Relatorios.Any())
        {
            @foreach (var app in PortalPowerBI.Services.MockDb.Relatorios)
            {
                <div class="col-12 col-md-6 col-lg-4 col-xl-3">
                    <a href="/Home/Visualizar?reportId=@app.Id" class="dashboard-card p-4">
                        <div class="card-icon-wrapper">
                            <i class="bi bi-bar-chart-fill"></i>
                        </div>
                        <h5 class="card-title">@app.Name</h5>
                        <p class="card-desc mb-0">
                            @(string.IsNullOrEmpty(app.Description) ? "Clique para acessar os indicadores e métricas deste painel." : app.Description)
                        </p>
                    </a>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-warning bg-opacity-10 border-warning text-warning rounded-4">
                    <i class="bi bi-exclamation-triangle me-2"></i> Nenhum relatório encontrado no sistema.
                </div>
            </div>
        }
    </div>
</div>