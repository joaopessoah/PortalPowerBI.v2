@model List<PortalPowerBI.Services.AppInfo>

@{
    ViewData[index: "Title"] = "Inteligência de Dados";
}

<div class="row">
    <div class="text-white">
     <h1 class="fw-bold"> <span class="text-white">Portal de Inteligência de Dados</span>
        </h1>
    </div>
</div>

<div class="row g-4">
    @if (Model != null && Model.Any())
    {
        @foreach (var item in Model)
        {
            <div class="col-12 col-md-6 col-lg-4 col-xl-3">
                <div class="card h-100 border-0 shadow-sm" style="background: rgba(30, 41, 59, 0.6); backdrop-filter: blur(10px); border-radius: 16px;">
                    <div class="card-body d-flex flex-column">
                        <div class="mb-3">
                            <div class="rounded-circle bg-primary bg-opacity-10 d-inline-flex align-items-center justify-content-center" style="width: 48px; height: 48px;">
                                <i class="bi bi-bar-chart-fill text-primary fs-5"></i>
                            </div>
                        </div>
                        <h5 class="card-title text-white mb-2">@item.Nome</h5>
                        <p class="card-text text-secondary small flex-grow-1">
                            @(!string.IsNullOrEmpty(item.Descricao) ? item.Descricao : "Visualização de dados e indicadores estratégicos.")
                        </p>
                        <div class="mt-3">
                            <a href="/Home/Visualizar/@item.Id" class="btn btn-outline-primary w-100 rounded-pill btn-sm">
                                <i class="bi bi-eye me-2"></i>Visualizar
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="alert alert-info bg-opacity-10 border-info text-info rounded-3">
                <i class="bi bi-info-circle me-2"></i> Nenhum relatório disponível para o seu perfil no momento.
            </div>
        </div>
    }
</div>