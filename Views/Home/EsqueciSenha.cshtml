@{ Layout = null; }
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Recuperar Senha</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body { background-color: #f0f2f5; height: 100vh; display: flex; align-items: center; justify-content: center; }
        .card-recovery { width: 100%; max-width: 400px; border: none; border-radius: 12px; box-shadow: 0 4px 20px rgba(0,0,0,0.08); }
    </style>
</head>
<body>

    <div class="card card-recovery p-5 bg-white">
        <div class="text-center mb-4">
            <h3 class="fw-bold text-primary">Recuperação</h3>
            <p class="text-muted">Digite seu e-mail para receber uma senha temporária.</p>
        </div>
        
        <form method="post" action="/Home/EnviarRecuperacao">
            <div class="mb-3">
                <label class="form-label text-secondary small fw-bold">E-MAIL CADASTRADO</label>
                <input type="email" name="email" class="form-control form-control-lg" placeholder="exemplo@benner.com.br" required />
            </div>
            
            <button type="submit" class="btn btn-primary w-100 btn-lg mb-3">Enviar Nova Senha</button>
            
            <div class="text-center">
                <a href="/Home/Login" class="text-decoration-none text-secondary">Voltar para Login</a>
            </div>
        </form>

        @if (ViewBag.Sucesso != null)
        {
            <div class="alert alert-success mt-4 small">
                <i class="bi bi-check-circle-fill"></i> @ViewBag.Sucesso
            </div>
        }
        
        @if (ViewBag.Erro != null)
        {
            <div class="alert alert-danger mt-4 small">
                <i class="bi bi-exclamation-triangle-fill"></i> @ViewBag.Erro
            </div>
        }
    </div>

</body>
</html>