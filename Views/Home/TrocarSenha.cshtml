@{ Layout = null; }
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Definir Nova Senha</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body { background-color: #f0f2f5; height: 100vh; display: flex; align-items: center; justify-content: center; }
        .card-reset { width: 100%; max-width: 400px; border: none; border-radius: 12px; box-shadow: 0 4px 20px rgba(0,0,0,0.08); }
    </style>
</head>
<body>

    <div class="card card-reset p-5 bg-white">
        <div class="text-center mb-4">
            <h3 class="fw-bold text-warning">Troca Obrigatória</h3>
            <p class="text-muted small">Por segurança, defina uma nova senha pessoal.</p>
        </div>
        
        <form method="post" action="/Home/SalvarNovaSenha">
            <div class="mb-3">
                <label class="form-label text-secondary small fw-bold">NOVA SENHA</label>
                <input type="password" name="novaSenha" class="form-control form-control-lg" required minlength="4" />
            </div>
            <div class="mb-4">
                <label class="form-label text-secondary small fw-bold">CONFIRMAR SENHA</label>
                <input type="password" name="confirmarSenha" class="form-control form-control-lg" required minlength="4" />
            </div>

            <button type="submit" class="btn btn-warning w-100 btn-lg text-white fw-bold">Atualizar Senha</button>
        </form>

        @if (ViewBag.Erro != null)
        {
            <div class="alert alert-danger mt-4 small">
                @ViewBag.Erro
            </div>
        }
    </div>

</body>
</html>