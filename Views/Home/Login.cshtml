@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - Benner BI</title>
    
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    
    <link rel="stylesheet" href="~/css/site.css" />

    <style>
        body {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
            background-color: #0f172a; 
            background-image: 
                radial-gradient(circle at 15% 50%, rgba(14, 165, 233, 0.15), transparent 25%),
                radial-gradient(circle at 85% 30%, rgba(139, 92, 246, 0.15), transparent 25%);
            font-family: 'Outfit', sans-serif;
        }

        .login-card {
            width: 100%;
            max-width: 400px;
            padding: 2.5rem;
            border-radius: 24px;
            background: rgba(30, 41, 59, 0.4);
            backdrop-filter: blur(20px);
            -webkit-backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.08);
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
            position: relative;
            overflow: hidden;
        }

        /* Animação da linha de topo */
        @@keyframes scan {
            0% { left: -100%; }
            100% { left: 200%; }
        }

        .login-card::before {
            content: '';
            position: absolute;
            top: 0; left: -100%; width: 100%; height: 2px;
            background: linear-gradient(90deg, transparent, #0ea5e9, transparent);
            animation: scan 3s linear infinite;
        }
        
        .form-control {
            background: rgba(15, 23, 42, 0.6) !important;
            border: 1px solid rgba(255, 255, 255, 0.1);
            color: #e2e8f0 !important;
            padding: 12px 16px;
            border-radius: 12px;
        }
        
        .btn-glow {
            background: linear-gradient(135deg, #0ea5e9 0%, #8b5cf6 100%);
            border: none;
            color: white;
            font-weight: 600;
            padding: 12px;
            border-radius: 12px;
            transition: all 0.3s ease;
        }
    </style>
</head>
<body>

    <div class="login-card text-center">
        
        <div class="mb-5">
            <img src="~/images/logo-benner.png" alt="Benner" class="img-fluid" style="max-height: 80px;">
            <p class="text-secondary small" style="letter-spacing: 1px;">PORTAL DE INTELIGÊNCIA DE DADOS</p>
        </div>

        <form action="/Home/Login" method="post">
            
            @if (TempData["Sucesso"] != null) {
                <div class="alert alert-success bg-success bg-opacity-10 border-success text-success py-2 mb-3 small rounded-3">
                    <i class="bi bi-check-circle-fill me-1"></i> @TempData["Sucesso"]
                </div>
            }
            @if (ViewBag.Erro != null) {
                <div class="alert alert-danger bg-danger bg-opacity-10 border-danger text-danger py-2 mb-3 small rounded-3">
                    <i class="bi bi-exclamation-octagon me-1"></i> @ViewBag.Erro
                </div>
            }

            <div class="text-start mb-3">
                <label class="form-label text-secondary small fw-bold ms-1" style="font-size: 0.75rem;">LOGIN</label>
                <div class="input-group">
                    <span class="input-group-text bg-transparent border-0 text-secondary position-absolute" style="z-index: 5; left: 5px; top: 10px;">
                        <i class="bi bi-person"></i>
                    </span>
                    <input type="text" name="usuario" class="form-control ps-5" placeholder="Seu usuário" required>
                </div>
            </div>

            <div class="text-start mb-4">
                <div class="d-flex justify-content-between">
                    <label class="form-label text-secondary small fw-bold ms-1" style="font-size: 0.75rem;">SENHA</label>
                    <a href="/Home/EsqueciSenha" class="text-decoration-none small text-primary" style="font-size: 0.75rem;">Esqueceu?</a>
                </div>
                <div class="input-group">
                    <span class="input-group-text bg-transparent border-0 text-secondary position-absolute" style="z-index: 5; left: 5px; top: 10px;">
                        <i class="bi bi-lock"></i>
                    </span>
                    <input type="password" name="senha" class="form-control ps-5" placeholder="Sua senha" required>
                </div>
            </div>

            <button type="submit" class="btn btn-glow w-100 mb-3">
                ACESSAR PORTAL
            </button>
        </form>

        <div class="mt-4 pt-3 border-top border-secondary border-opacity-10">
            <small class="text-secondary" style="font-size: 0.7rem;">
                &copy; 2025 Benner Labs &bull; Segurança Corporativa
            </small>
        </div>
    </div>

</body>
</html>